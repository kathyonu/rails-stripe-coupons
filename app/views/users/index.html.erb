<div class="container">
  <div class="row">
    <h3>Users</h3>
    <div class="column">
      <table class="table">
        <tbody>
          <% if user_signed_in? %>
            <% if current_user.try(:admin?) %>
              <% @users.each do |user| %>
                <tr>
                  <%= render user %>
                </tr>
              <% else %>
                'This page is restricted to administrators'
              <% end %>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
